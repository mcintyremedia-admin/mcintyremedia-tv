<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="service.network.tunnel" name="Network Tunnel" version="1.0.0" provider-name="McIntyreMedia|JC">
    <requires>
        <import addon="xbmc.metadata" version="1.0"/>
        <import addon="xbmc.addon" version="12.0.0"/>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.beautifulsoup" version="3.2.1"/>
        <import addon="script.module.mechanize" version="0.2.6"/>
    </requires>
    <extension point="xbmc.service" library="default.py" start="login"/>
    <extension point="xbmc.addon.metadata" language="english">
        <summary lang="en">Network tunnel</summary>
        <description lang="en">Network tunnel</description>
        <disclaimer lang="en">Please check if tunnel access is allowed in your local jurisdiction</disclaimer>
        <platform>linux</platform>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 2013</license>
        <website>http://www.mcintyremedia.tv</website>
        <forum></forum>
        <source></source>
        <email>admin@mcintyremedia.tv</email>
    </extension>
</addon>

<addon id="plugin.audio.jointone" name="JointOne" version="2.0.0" provider-name="McIntyreMedia">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>audio</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Joint One Radio</summary>
    <description lang="en">Enjoy Joint One's unique music mix</description>
    <disclaimer lang="en"></disclaimer>
    <language></language>
    <platform>all</platform>
    <email>admin@mcintyremedia.tv</email>
  </extension>
</addon>

<addon
    id="plugin.video.iplayer"
    name="iPlayer"
    version="2.5.4"
    provider-name="Alastair, BuZz, Dink">
    <requires>
        <import addon="xbmc.python" version="2.1.0"/>
        <import addon="script.module.elementtree" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video audio</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Watch TV and listen to radio from the BBC's iPlayer website</summary>
        <description lang="en">
            This XBMC plugin enables (UK only) the playing of TV and Radio catchup content from the BBC IPlayer website. Live radio and TV feeds are also supported.
        </description>
        <license>GNU GENERAL PUBLIC LICENSE. Version 2, June 1991</license>
        <email>buzz at exotica org uk</email>
        <website>http://code.google.com/p/xbmc-iplayerv2/</website>
        <source>http://code.google.com/p/xbmc-iplayerv2/source/checkout</source>
    </extension>
</addon>
</addons>
